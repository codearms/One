<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/eight"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_artist_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_small"
            tools:text="歌曲名称|艺术家|2009年12月新歌速递|文件夹名称" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four"
            android:maxLines="1"
            android:textColor="@color/color_text_general"
            android:textSize="@dimen/text_size_smallest"
            tools:text="歌曲信息|艺术家信息|专辑信息|文件夹信息" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/twelve"
        android:layout_marginLeft="@dimen/twelve"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/image_description"
        android:padding="@dimen/sixteen"
        android:src="@drawable/ic_more" />
</LinearLayout>