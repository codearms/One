<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/twelve"
    android:layout_marginTop="@dimen/twelve"
    android:layout_marginRight="@dimen/twelve"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_text_title"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/article_top_description"
            android:src="@drawable/ic_article_top"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginLeft="@dimen/sixteen"
            android:layout_marginTop="@dimen/sixteen"
            android:layout_marginBottom="@dimen/sixteen"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toStartOf="@id/iv_collect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_description"
            android:padding="@dimen/twelve"
            android:src="@drawable/ic_un_collect"
            android:tint="@color/text_color_collect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/eight"
            android:paddingLeft="@dimen/eight"
            android:paddingTop="@dimen/sixteen"
            android:paddingEnd="@dimen/sixteen"
            android:paddingRight="@dimen/sixteen"
            android:paddingBottom="@dimen/sixteen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:background="@drawable/bg_new"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:text="@string/_new"
                android:textColor="@color/color_music"
                android:textSize="@dimen/text_size_smallest" />

            <TextView
                android:id="@+id/tv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:background="@drawable/bg_project"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:text="@string/project"
                android:textColor="@color/color_navigation"
                android:textSize="@dimen/text_size_smallest"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_classify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_news"
                android:textSize="@dimen/text_size_smaller" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:drawableStart="@drawable/ic_author"
                android:drawableLeft="@drawable/ic_author"
                android:drawablePadding="2dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/text_size_smaller" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_date"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>