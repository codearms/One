<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_navigation_header"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/sixteen">

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twelve"
            android:layout_marginBottom="@dimen/twelve"
            android:contentDescription="@string/project_description"
            android:src="@drawable/ic_project" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/project_name"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/text_size_small"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/project_git"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/text_size_smaller"
            android:typeface="serif" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_scan_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/sixteen"
        android:contentDescription="@string/scan_code_description"
        android:src="@drawable/ic_scan_code" />
</RelativeLayout>