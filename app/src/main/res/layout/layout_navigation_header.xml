<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_navigation_header">

    <ImageView
        android:id="@+id/iv_scan_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/sixteen"
        android:layout_marginBottom="@dimen/sixteen"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_nav_scan_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginLeft="@dimen/sixteen"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_scan_code" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginRight="@dimen/sixteen"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/login"
        android:textColor="@color/selector_title"
        android:textSize="@dimen/text_size_small"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@id/tv_des"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_scan_code"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginRight="@dimen/sixteen"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/personal_description"
        android:textColor="@color/selector_title"
        android:textSize="@dimen/text_size_smallest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name" />
</android.support.constraint.ConstraintLayout>