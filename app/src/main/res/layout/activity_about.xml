<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.codearms.maoqiqi.one.view.StatusBarView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_navigation" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_navigation"
        android:theme="@style/toolbar_theme"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/navigation_popup_theme"
        app:title="@string/about"
        app:titleTextAppearance="@style/toolbar_appearance" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/thirty_two"
        android:contentDescription="@string/image_description"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/current_version"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_smaller" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two"
        android:background="@color/color_text_title"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_divider" />

        <TextView
            android:id="@+id/tv_function_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingStart="@dimen/sixteen"
            android:paddingEnd="@dimen/sixteen"
            android:text="@string/function_introduction"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginLeft="@dimen/sixteen"
            android:background="@color/color_divider" />

        <TextView
            android:id="@+id/tv_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingStart="@dimen/sixteen"
            android:paddingEnd="@dimen/sixteen"
            android:text="@string/check_update"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginLeft="@dimen/sixteen"
            android:background="@color/color_divider" />

        <TextView
            android:id="@+id/tv_update_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingStart="@dimen/sixteen"
            android:paddingEnd="@dimen/sixteen"
            android:text="@string/update_description"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginLeft="@dimen/sixteen"
            android:background="@color/color_divider" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingStart="@dimen/sixteen"
            android:paddingEnd="@dimen/sixteen"
            android:text="@string/give_a_star"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_divider" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:padding="@dimen/sixteen"
        android:text="@string/star_content"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvGank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="《代码家 · 干货集中营》"
        android:textColor="@color/color_text_main"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvDouBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="《豆瓣开发者服务使用条款》"
        android:textColor="@color/color_text_main"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="©2017 干货营 github.com/maoqiqi"
        android:textColor="@color/color_text_secondary"
        android:textSize="14sp" />
</LinearLayout>